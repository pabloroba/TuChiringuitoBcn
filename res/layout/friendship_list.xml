<?xml version="1.0" encoding="utf-8"?>
   
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="3dip"
    android:paddingBottom="3dip"
    android:background="@drawable/background"
    >

	<Button
		android:id="@+id/fl_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/bplay"
		android:visibility="gone"
		>
	
	</Button>

	<ImageView 
		android:id="@+id/image"
		android:layout_marginLeft="10dip"
		android:paddingTop="10px"
	    android:maxWidth="150px"
	    android:maxHeight="80px"
	    android:layout_marginBottom="5dip" android:layout_height="70dip" android:layout_marginTop="5dip" android:layout_width="70dip"
	    />
	    
	    
	<LinearLayout 
		android:layout_width="wrap_content" 
		android:layout_weight="1"
		android:layout_marginLeft="6dip"
		android:layout_marginRight="6dip"
		android:layout_height="wrap_content" 
		android:orientation="vertical"
		
		>
	
		    
		<TextView
	    	android:id="@+id/name"
	 		android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:maxLines="1"
		    android:textSize="14dip"
		    android:textColor="#000000"
		    />
		    
     </LinearLayout>	

     
</LinearLayout> 